<odoo>
    <record id="mail_template_discount_approval" model="mail.template">
        <field name="name">Sale Discount Approval</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="email_from">{{object.company_id.email}}</field>
        <field name="email_to">{{object.team_id.user_id.email}}</field>
        <field name="subject"> Approval Needed: Sale Quotation {{object.name}}</field>
        <field name="body_html" type="html">
            <tbody>
                <p>Hello,</p>
                <p>The sale quotation <span style="font-weight:bold;" t-out="object.name or ''" /> requires your approval.</p>
                <p>The total discount in sale quotation exceed the discount limit defined by your sales team.</p>
                <p>
                    <a t-attf-href="{{object._build_approval_url('approve')}}"
                       style="padding:10px 15px;background:#28a745;color:white;text-decoration:none;">
                        Approve
                    </a>

                    <a t-attf-href="{{object._build_approval_url('reject')}}"
                       style="padding:10px 15px;background:#dc3545;color:white;text-decoration:none;margin-left:10px;">
                        Reject
                    </a>
                </p>

                <p>Thank you.</p>
            </tbody>
        </field>
    </record>
</odoo>
