<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="crm_lead_view_form_inherit_customer_access_by_sales_team" model="ir.ui.view">
    <field name="name">crm.lead.view.form.inherit.customer.access.by.sales.team</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='lead_partner']/field[@name='partner_id']" position="before">
          <field name="partner_ids" invisible="1"/>
      </xpath>
        <xpath expr="//group[@name='lead_partner']/field[@name='partner_id']" position="attributes">
            <attribute name="domain">[('id', 'in', partner_ids)]</attribute>
        </xpath>
        <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="attributes">
            <attribute name="domain">[('id', 'in', partner_ids)]</attribute>
        </xpath>
    </field>
  </record>

    <record id="quick_create_opportunity_form_inherit_customer_access_by_sales_team" model="ir.ui.view">
        <field name="name">quick.create.opportunity.form.inherit.customer.access.by.sales.team</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
        <field name="arch" type="xml">
          <xpath expr="//group" position="inside">
              <field name="partner_ids" invisible="1"/>
          </xpath>
            <xpath expr="//group/field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('id', 'in', partner_ids)]</attribute>
            </xpath>
        </field>
      </record>
</odoo>