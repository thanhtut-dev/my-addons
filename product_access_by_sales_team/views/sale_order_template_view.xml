<odoo>
  <record id="sale_order_template_view_form_inherit_product_access_by_sales_team" model="ir.ui.view">
    <field name="name">sale.order.template.view.form.inherit.product.access.by.sales.team</field>
    <field name="model">sale.order.template</field>
    <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//group/group[1]" position="inside">
          <field name="team_id" />
          <field name="filter_product_ids" invisible="1"/>
        </xpath>
        <xpath expr="//notebook/page[@name='order_lines']/field/list/field[@name='product_id']" position="attributes">
            <attribute name="domain">[('id', 'in', parent.filter_product_ids), ('type', '!=', 'combo')]</attribute>
        </xpath>
        <xpath expr="//notebook/page[@name='optional_products']/field/list/field[@name='product_id']" position="attributes">
            <attribute name="domain">[('id', 'in', parent.filter_product_ids)]</attribute>
        </xpath>

    </field>
  </record>
</odoo>
